<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="-30dp"
                app:cardBackgroundColor="@color/soft_cyan"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp" />

            <LinearLayout
                android:id="@+id/rellay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="@dimen/small_margin">

                <RelativeLayout
                    android:id="@+id/img_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    tools:ignore="UselessParent">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/selectImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:background="@drawable/ic_usuario"
                        android:elevation="1dp"
                        app:civ_border_width="1dp"
                        app:srcCompat="@drawable/ic_usuario" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp"
                            app:contentPadding="@dimen/small_margin">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="70dp"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/blackMate"
                                    android:textSize="@dimen/x_big_text"
                                    tools:text="Username" />

                                <TextView
                                    android:id="@+id/usermail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/soft_grey"
                                    android:textSize="@dimen/button_size_text"
                                    tools:text="Email" />

                                <TextView
                                    android:id="@+id/mperfil_telefono"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/small_margin"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/soft_grey"
                                    android:textSize="@dimen/button_size_text"
                                    tools:text="TÃ©lefono" />

                                <TextView
                                    android:id="@+id/miPerfil"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/xx_big_margin"
                                    android:drawableStart="@drawable/ic_person"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/small_margin"
                                    android:text="  Mi perfil "
                                    android:textSize="@dimen/button_size_text" />

                                <TextView
                                    android:id="@+id/change_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/xx_big_margin"
                                    android:drawableStart="@drawable/ic_lock_open"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/small_margin"
                                    android:text="  Cambiar Password "
                                    android:textSize="@dimen/subtitle_text" />

                                <TextView
                                    android:id="@+id/mis_tutorias"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/xx_big_margin"
                                    android:drawableStart="@drawable/ic_star_border"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/small_margin"
                                    android:text="  Mis Tutorias "
                                    android:textSize="@dimen/subtitle_text" />

                                <Button
                                    android:id="@+id/logOut"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/medium_margin"
                                    android:background="@drawable/button"
                                    android:fontFamily="@font/roboto"
                                    android:text="cerrar sesion"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/button_size_text"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</layout>