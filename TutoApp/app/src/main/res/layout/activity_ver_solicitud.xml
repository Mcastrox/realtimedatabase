<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerSolicitudActivity">

    <ImageView
        android:id="@+id/foto_estudiante"
        android:layout_width="75dp"
        android:layout_height="75dp"

        android:layout_marginTop="16dp"
        android:background="@color/blackMate"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aceptar_tutoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="aceptar"
        app:layout_constraintBottom_toTopOf="@+id/rechazar_tutoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto_estudiante"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/rechazar_tutoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="rechazar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nombre_estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="name"
        app:layout_constraintBottom_toTopOf="@+id/aceptar_tutoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto_estudiante"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/hora_tutoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hora"
        app:layout_constraintBottom_toTopOf="@+id/notas_tutoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_estudiante" />

    <TextView
        android:id="@+id/notas_tutoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notas"
        app:layout_constraintBottom_toTopOf="@+id/aceptar_tutoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_estudiante" />


</androidx.constraintlayout.widget.ConstraintLayout>