<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blackMate</item>
        <item name="colorPrimaryDark">@color/blackMate</item>
        <item name="colorAccent">@color/soft_cyan</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SplashTheme2" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash2</item>
    </style>

    <!--RatingBar-->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">10dp</item>

    </style>
</resources>
