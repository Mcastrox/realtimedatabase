<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="horizontal"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_blackAlpha">



            <LinearLayout
                android:id="@+id/rellay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_border">


                    <ImageView

                        android:id="@+id/imageSelected"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_usuario" />
                </LinearLayout>


                <EditText
                    android:id="@+id/tvusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_user"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:textSize="32dp" />


                <LinearLayout
                    android:id="@+id/rellay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rellay1"
                    android:background="@color/grey">

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textColor="@color/redBrick"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textColor="@color/redBrick"
                                android:textSize="16dp" />

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/relay3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/rellay2"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-black"
                        android:hint="Username: "
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/user_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-black"
                        android:hint="Direccion: "
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/user_telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-black"
                        android:hint="Telefono: "
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/modificar_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:background="@color/soft_cyan"
                        android:fontFamily="sans-serif-black"
                        android:text="Modificar"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
